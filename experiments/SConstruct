import re
Import('env')
env = env.Clone()

env.Append(LIBS = ['m','pthread', 'fftw3f', 'histdb', 'decoder', 'spectgen', 'tag_c'])
env.Append(CPPPATH = ['/usr/include/taglib'])

CLUSTER_SOURCES = [
	"kmeans.c",
	"hist_ops.c",
	"hist_cluster.c"
]

GABOR_SOURCES = [
	"gabor.c",
	"plot.c"
]

env.Program('gabor', GABOR_SOURCES)
env.Program('cluster', CLUSTER_SOURCES)


